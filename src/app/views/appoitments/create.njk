{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <p>Agendando hor√°rio</p>

    <div class="provider">
      <div>
        <img src="/files/{{ provider.avatar }}"/>
        <strong>{{ provider.name }}</strong>
      </div>
    </div>
    
    <form action="/app/appoitments/new/{{ provider.id }}" method="post">
      <input type="text" class="flatpickr" placeholder="Escolha uma data"/>

      <div id="hours"></div>

      <button type="submit">Agendar</button>
    </form>
  </div>

  <script type="text/javascript">
    flatpickr('.flatpickr', {
      minDate: new Date(),
      dateFormat: 'd/m/y',
      onChange: function(date){
        fetch(`/app/available/{{ provider.id }}?date=${date[0].getTime()}`)
          .then(function(response){
            response.text()
          .then(function(html){
              document.getElementById('hours').innerHTML = html
          })
        })
      }
    })
  </script>
{% endblock %}